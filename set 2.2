//find the count invertion of  array elements

#include <iostream>
using namespace std;

int equilibriumpoint(int arr[],int n){
    
    int lsum;
    int rsum;
    
    for(int i=0;i<n;i++){
        
        lsum = 0;
        for(int j=0;j<i;j++){
            lsum += arr[j];
        }
        
        rsum = 0;
        for(int j = i+1;j<n;j++){
            rsum += arr[j];
        }
        
        if(lsum == rsum){
            return i+1;
        }
    }
    return -1;
}
int main(){
    
          int arr[] = {1,2,2,1,5};
          int n  = 5;
          
          cout<<equilibriumpoint(arr,n);
          
          return 0;
}
